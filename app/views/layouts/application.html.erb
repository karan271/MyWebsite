<!DOCTYPE html>
<html>
<head>
  <title>  Catechize </title>
  <!-- <link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-96x96.png"> -->
  <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="icon" type="image/png" href="/assets/catechize1.png">
  <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
  <link rel="stylesheet" type="text/css" href="materialize.css">
 
</head>

<body>

<% if notice %>
<script type="text/javascript">
	noty({text: '<%= notice %>', type: 'alert'});
</script>

<% end %>


<% if alert %>

<script type="text/javascript">
	noty({text: '<%= alert %>', type: 'error'});
</script>
<% end %>
 
<nav>
<div class="nav-wrapper">  <div class="brand-logo"> 
		<%= link_to "Catechize", home_index_path, method: :get %> </div>
	
		<ul class="right hide-on-med-and-down">
			<% if user_signed_in? %>
			
			
			<li> <%= link_to "Profile", profile_path, method: :get %></li>
			<li> <%= link_to "Edit", edit_user_registration_path, method: :get %></li>
			<li> <%= link_to "Users", users_path %> </li>
			<li> <%= link_to "Sign out", destroy_user_session_path, method: :delete %> </li>
			
			
			<% else %>
			
			<li> <%= link_to"Sign in", new_user_session_path, method: :post %> </li>
			
			<% end %>
		

		</ul>
		</div>
	</nav>


 	   <!-- <p class="notice"><%= notice %></p> -->
       <!-- <p class="alert"><%= alert %></p> -->


<%= yield %>

</body>
</html>
